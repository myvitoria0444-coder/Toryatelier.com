  <!-- Modal (abre foto grande) -->
  <div class=“modal” id=“modal” role=“dialog” aria-modal=“true” aria-label=“Imagem ampliada”>
    <div class=“modal-box”>
      <div class=“modal-top”>
        <b id=“mTitle”>Imagem</b>
        <button class=“x” id=“closeBtn” type=“button”>Fechar ✕</button>
