  <script>
    // Ano
    const y = new Date().getFullYear();
    document.getElementById(“year”).textContent = y;
    document.getElementById(“footerYear”).textContent = y;

    // Contador automático de peças (quantos cards na galeria)
    const shots = Array.from(document.querySelectorAll(“.shot”));
    document.getElementById(“countPieces”).textContent = String(shots.length).padStart(2,”0”);

    // Modal
    const modal = document.getElementById(“modal”);
    const mTitle = document.getElementById(“mTitle”);
    const mImg = document.getElementById(“mImg”);
    const mDesc = document.getElementById(“mDesc”);
const closeBtn = document.getElementById(“closeBtn”);

    function openModal(title, src, desc){
      mTitle.textContent = title || “Imagem”;
      mImg.src = src;
      mImg.alt = title || “Imagem”;
      mDesc.textContent = desc || “”;
      modal.classList.add(“open”);
    }
    function closeModal(){
      modal.classList.remove(“open”);
      mImg.src = “”;
    }

    shots.forEach(card=>{
      card.addEventListener(“click”, ()=>{
        const title = card.dataset.title;
        const desc = card.dataset.desc;
        const img = card.querySelector(“img”);
        openModal(title, img.src, desc);
      });
    });
closeBtn.addEventListener(“click”, closeModal);
    modal.addEventListener(“click”, (e)=>{
      if(e.target === modal) closeModal();
    });
    document.addEventListener(“keydown”, (e)=>{
      if(e.key === “Escape”) closeModal();
    });
  </script>
